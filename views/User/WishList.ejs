<%- include('partials/header') %>

    <!-- Wishlist Area Start -->
    <div class="cart-main-area pt-100px pb-100px">
        <div class="container">
            <h3 class="cart-page-title">Your cart items</h3>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Name</th>
                                        <th>Until Price</th>
                                        <th>action</th>
                            
                                        <th>Add To Cart</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let TotalPrice=0 %>
                                    <% let totalQ=0,Price=0 %>
                                    <% locals.wishlist.forEach(element => { %>
                                          <tr>
                                        <td class="product-thumbnail">
                                            <a href="#"><img class="img-responsive ml-3" src="/AdminAssets/images/addProduct/<%=element.product.Images[0]  %>"alt="" /></a>
                                        </td>
                                        <td class="product-name"><a href="#"><%=element.product.ProductName%></a></td> 
                                          <td class="product-price-cart"><p>₹<%= Math.round(element.product.Price-(element.product.Price*element.product.Discount/100))%></p><span class="amount"><del style="color:grey">₹<%= element.product.Price%></del></span><p style="color: rgb(29, 247, 29);"><%= element.product.Discount%>% Off</p></td>
                                        
                                        <td class="product-wishlist-cart">
                                            <a href="" onclick="removewish('<%=element.product._id %>')">remove</a>
                                        </td>
                  
                                        <td class="product-wishlist-cart">
                                            <a  onclick="location.href='/AddCart?ProductId='+'<%=element.product._id %>'" >add to cart</a>
                                        </td>
                                    </tr>

                                  <%  }); %> 
                                    
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Wishlist Area End -->

<%- include('partials/footer') %>
<script src="assets/js/vendor/vendor.min.js"></script>
<script src="assets/js/plugins/plugins.min.js"></script>
<script src="assets/js/userajax.js"></script>

<!-- Main Js -->
<script src="assets/js/main.js"></script>