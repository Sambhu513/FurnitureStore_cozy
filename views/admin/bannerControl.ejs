<%- include('partials/Header') %>

<div class="container">
  <div style="margin-top: 135px" class="row">
    <div class="col-lg-12">
      <div class="card m-b-30">
        <div class="card-body">
          <h4 class="mt-0 header-title">Order details</h4>
          <p class="sub-title">
          manage user orders here
          </p>
<button onclick="location.href='/admin/addBanner'" class="btn btn-success float-right">Add Banner</button>
<br>
<br>
          <div class="table-responsive">
            <table class="table mb-0">
              <thead class="thead-default">
                <tr>
                  <th>#</th>
                  <th>banner name</th>
                  <th>banner Disc</th>
                  <th>Images</th>
                  <th>actions</th>
                  
               

                </tr>
              </thead>
              <tbody>
                <% let count=0%> 
                <% locals.banner.forEach((element)=> { %>
                  <tr>
                    <% count++ %> 
                    <th scope="row"><%= count %> </th>
            
                    <td><%=element.ProductName  %> </td>
                    <td><%=element.Desc%> </td>
                
                    <td>    <img  src="/AdminAssets/images/addProduct/<%=element.Image %>" alt="" style="height: 40px; width: 40px;">  </td>
                    <th class=""><a href="/admin/editbanner?bannerid=<%=element._id  %>"><i class="fas fa-edit"></i></a> <br> <br><a onclick="deletebanner('<%=element._id %>')"><i class="fas fa-trash-alt"></i></a></th>
                </tr>
                  
              <% }) %> 
               
               
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- end col -->
  </div>
  <%- include("partials/footer") %>
</div>
